{
  "title": "Reply to a comment",
  "endpoint": "https://business-api.tiktok.com/open_api/v1.3/comment/post/",
  "method": "POST",
  "category_path": [
    "Ad Comments"
  ],
  "official_only": true,
  "request": {
    "headers": [
      {
        "name": "Access-Token",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "Authorized access token. For details, see Authentication ."
      },
      {
        "name": "Content-Type",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "The content type of the request. Allowed value: \"application/json\" ."
      }
    ],
    "parameters": [
      {
        "name": "advertiser_id",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "Advertiser ID"
      },
      {
        "name": "ad_id",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "Ad ID"
      },
      {
        "name": "tiktok_item_id",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "TikTok video ID"
      },
      {
        "name": "comment_id",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "ID of the comment that you want reply to"
      },
      {
        "name": "comment_type",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "Comment type. Currently, only REPLY is supported."
      },
      {
        "name": "text",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "Comment text."
      },
      {
        "name": "identity_type",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "Type of the identity that are linked to the user. Enum values: CUSTOMIZED_USER (Custom User), TT_USER (TikTok User). For details about identity types, see Identities ."
      },
      {
        "name": "identity_id",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "Identity ID"
      }
    ],
    "examples": [
      {
        "title": "Example",
        "curl": "curl -H \"Access-Token:xxx\" -H \"Content-Type:application/json\" -X POST \\\n-d '{\n    \"advertiser_id\": \"ADVERTISER_ID\",\n    \"ad_id\": \"AD_ID\",\n    \"tiktok_item_id\": \"TIKTOK_ITEM_ID\",\n    \"comment_id\": \"COMMENT_ID\",\n    \"comment_type\": \"COMMENT_TYPE\",\n    \"text\": \"TEXT\",\n    \"identity_type\": \"IDENTITY_TYPE\",\n    \"identity_id\": \"IDENTITY_ID\"\n}' \\\nhttps://business-api.tiktok.com/open_api/v1.3/comment/post/"
      }
    ]
  },
  "response": {
    "example": {
      "status_line": "HTTPS/1.1 200 OK",
      "body": {
        "message": "OK",
        "code": 0,
        "data": {
          "comment_id": "7122941661025993518",
          "text": "Hello word",
          "reply_to_comment_id": "7122941661025993510",
          "item_id": 0,
          "create_time": "2022-06-07"
        }
      }
    }
  }
}