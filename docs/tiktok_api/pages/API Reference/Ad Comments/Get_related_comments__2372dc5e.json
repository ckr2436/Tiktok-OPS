{
  "title": "Get related comments",
  "endpoint": "https://business-api.tiktok.com/open_api/v1.3/comment/reference/",
  "method": "GET",
  "category_path": [
    "Ad Comments"
  ],
  "official_only": true,
  "request": {
    "headers": [
      {
        "name": "Access-Token",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "Authorized access token. For details, see Authentication ."
      }
    ],
    "parameters": [
      {
        "name": "advertiser_id",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "Advertiser ID."
      },
      {
        "name": "comment_id",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "Comment ID."
      },
      {
        "name": "comment_type",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "Comment type. It can be COMMENT , which is an original comment, or REPLY , which is a reply to an original comment."
      },
      {
        "name": "original_comment_id",
        "required": false,
        "type": "string",
        "raw_type": "string",
        "description": "ID of the original comment. A value will be returned only when comment_type is REPLY`."
      },
      {
        "name": "page_size",
        "required": false,
        "type": "number",
        "raw_type": "number",
        "description": "Page size. Value range: 1-1000. Default value: 10 ."
      },
      {
        "name": "page",
        "required": false,
        "type": "number",
        "raw_type": "number",
        "description": "Current page number. Value range: â‰¥ 1. Default value: 1."
      }
    ],
    "examples": [
      {
        "title": "Example",
        "curl": "curl --get -H \"Access-Token:xxx\" \\\n--data-urlencode \"advertiser_id=ADVERTISER_ID\" \\\n--data-urlencode \"comment_id=COMMENT_ID\" \\\n--data-urlencode \"page_size=PAGE_SIZE\" \\\n--data-urlencode \"original_comment_id=COMMENTAL_COMMENT_ID\" \\\n--data-urlencode \"comment_type=comment_type\" \\\n--data-urlencode \"page=PAGE\" \\\nhttps://business-api.tiktok.com/open_api/v1.3/comment/reference/"
      }
    ]
  },
  "response": {
    "example": {
      "status_line": "HTTPS/1.1 200 OK",
      "body": {
        "message": "OK",
        "code": 0,
        "data": {}
      }
    }
  }
}