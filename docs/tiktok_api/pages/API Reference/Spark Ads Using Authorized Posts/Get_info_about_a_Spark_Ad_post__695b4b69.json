{
  "title": "Get info about a Spark Ad post",
  "endpoint": "https://business-api.tiktok.com/open_api/v1.3/tt_video/info/",
  "method": "GET",
  "category_path": [
    "Spark Ads Using Authorized Posts"
  ],
  "official_only": true,
  "request": {
    "headers": [
      {
        "name": "Access-Token",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "Authorized access token. For details, see Authentication ."
      },
      {
        "name": "Content-Type",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "The content type of the request. Allowed value: \"application/json\" ."
      }
    ],
    "parameters": [
      {
        "name": "advertiser_id",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "Advertiser ID."
      },
      {
        "name": "auth_code",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "The authorization code for the Spark Ads post."
      }
    ],
    "examples": [
      {
        "title": "Example",
        "curl": "curl --get -H \"Access-Token:xxx\" \\\n--data-urlencode \"advertiser_id=ADVERTISER_ID\" \\\n--data-urlencode \"auth_code=AUTH_CODE\" \\\nhttps://business-api.tiktok.com/open_api/v1.3/tt_video/info/"
      }
    ]
  },
  "response": {
    "example": {
      "status_line": "HTTPS/1.1 200 OK",
      "body": "{\n    \"code\": 0,\n    \"message\": \"OK\",\n    \"request_id\": \"{{request_id}}\",\n    \"data\": {\n        \"auth_info\": {\n            \"auth_start_time\": \"2022-07-08 07:32:45\",\n            \"auth_end_time\": \"2022-08-07 07:32:44\"\n        },\n        \"video_info\": {\n            \"file_name\": \"\",\n            \"height\": 1280,\n            \"size\": 813340,\n            \"width\": 720,\n            \"signature\": \"{{signature}}\",\n            \"duration\": 1.881,\n            \"preview_url\": \"{{preview_url}}\",\n            \"poster_url\": \"{{poster_url}}\",\n            \"bit_rate\": {{bit_rate}},\n            \"video_id\": \"{{video_id}}\"\n        },\n        \"item_info\": {\n            \"stitch_original_item_id\": \"0\",\n            \"auth_code\": \"{{auth_code}}\",\n            \"item_id\": \"{{item_id}}\",\n            \"anchor_list\": null,\n            \"text\": \"\",\n            \"is_multi_duet_stitch\": false,\n            \"duet_original_item_id\": \"0\",\n            \"carousel_info\": null,\n            \"item_type\": \"VIDEO\"\n        },\n        \"user_info\": {\n            \"identity_type\": \"AUTH_CODE\",\n            \"tiktok_name\": \"{{tiktok_name}}\",\n            \"identity_id\": \"{{identity_id}}\"\n        }\n    }\n}"
    }
  }
}