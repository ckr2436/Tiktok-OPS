{
  "title": "Renew a short-term access token",
  "endpoint": "https://business-api.tiktok.com/open_api/v1.3/tt_user/oauth2/refresh_token/",
  "method": "POST",
  "category_path": [
    "Authentication"
  ],
  "official_only": true,
  "request": {
    "headers": [
      {
        "name": "Content-Type",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "Request message type. Allowed format: application/json ."
      }
    ],
    "parameters": [
      {
        "name": "client_id",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "ID of your developer app. To find the App ID , navigate to My Apps > App Detail > Basic Information ."
      },
      {
        "name": "client_secret",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "Secret of your developer app. To find the Secret , navigate to My Apps > App Detail > Basic Information ."
      },
      {
        "name": "grant_type",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "The way of generating the access token. The allowed enum value: refresh_token : To generate the access token by refresh token."
      },
      {
        "name": "refresh_token",
        "required": true,
        "type": "string",
        "raw_type": "string",
        "description": "Refresh token to renew an existing access token. You can obtain the refresh token in the response of /tt_user/oauth2/token/ endpoint when you generate an access token."
      }
    ],
    "examples": [
      {
        "title": "Example",
        "curl": "curl --location --request POST 'https://business-api.tiktok.com/open_api/v1.3/tt_user/oauth2/refresh_token/' \\\n--header 'Content-Type: application/json' \\\n--data '{\n    \"client_id\":\"{{client_id}}\",\n    \"client_secret\":\"{{client_secret}}\",\n    \"grant_type\":\"refresh_token\",\n    \"refresh_token\":\"{{refresh_token}}\"\n}'"
      }
    ]
  },
  "response": {
    "example": {
      "status_line": "HTTPS/1.1 200 OK",
      "body": "{\n    \"code\": 0,\n    \"message\": \"OK\",\n    \"request_id\": \"{{request_id}}\",\n    \"data\": {\n        \"access_token\": \"{{access_token}}\",\n        \"expires_in\": 86400,\n        \"open_id\": \"{{open_id}}\",\n        \"refresh_token\": \"{{refresh_token}}\",\n        \"refresh_token_expires_in\": 28484364,\n        \"scope\": \"message.list.manage,video.list,video.insights,user.insights,user.info.basic,comment.list,biz.brand.insights,biz.spark.auth,tcm.order.update,comment.list.manage,video.upload,video.publish,biz.ads.recommend,user.account.type,biz.creator.info,user.info.username,message.list.send,user.info.profile,user.info.stats,message.list.read,biz.creator.insights\",\n        \"token_type\": \"Bearer\"\n    }\n}"
    }
  }
}